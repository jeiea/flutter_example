{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "flutter pub run build_runner watch",
      "type": "flutter",
      "command": "flutter",
      "args": [
        "pub",
        "run",
        "build_runner",
        "watch",
        "--delete-conflicting-outputs"
      ],
      "isBackground": true,
      "promptOnClose": false,
      "problemMatcher": {
        "pattern": {
          "regexp": "(?!)",
          "file": 1,
          "location": 2,
          "message": 3
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "\\[INFO\\] ",
          "endsPattern": "(?=)"
        }
      }
    }
  ]
}
